{
	"multipart": [
		{ "when": { "facing": "north" }, "apply": { "model": "cosmosindustry:block/processing/block_ore_plant_model" } },
		{ "when": { "facing": "south" }, "apply": { "model": "cosmosindustry:block/processing/block_ore_plant_model", "y": 180 } },
		{ "when": { "facing": "west"  }, "apply": { "model": "cosmosindustry:block/processing/block_ore_plant_model", "y": 270 } },
		{ "when": { "facing": "east"  }, "apply": { "model": "cosmosindustry:block/processing/block_ore_plant_model", "y": 90 } },
		
		{ "when": { "AND": [ { "facing": "north", "on": "true"  } ] }, "apply": { "model": "cosmosindustry:block/processing/block_ore_plant_internals_on" } },
		{ "when": { "AND": [ { "facing": "south", "on": "true"  } ] }, "apply": { "model": "cosmosindustry:block/processing/block_ore_plant_internals_on", "y": 180 } },
		{ "when": { "AND": [ { "facing": "west",  "on": "true"  } ] }, "apply": { "model": "cosmosindustry:block/processing/block_ore_plant_internals_on", "y": 270 } },
		{ "when": { "AND": [ { "facing": "east",  "on": "true"  } ] }, "apply": { "model": "cosmosindustry:block/processing/block_ore_plant_internals_on", "y": 90 } },
		
		{ "when": { "AND": [ { "facing": "north", "on": "false" } ] }, "apply": { "model": "cosmosindustry:block/processing/block_ore_plant_internals_off" } },
		{ "when": { "AND": [ { "facing": "south", "on": "false" } ] }, "apply": { "model": "cosmosindustry:block/processing/block_ore_plant_internals_off", "y": 180 } },
		{ "when": { "AND": [ { "facing": "west",  "on": "false" } ] }, "apply": { "model": "cosmosindustry:block/processing/block_ore_plant_internals_off", "y": 270 } },
		{ "when": { "AND": [ { "facing": "east",  "on": "false" } ] }, "apply": { "model": "cosmosindustry:block/processing/block_ore_plant_internals_off", "y": 90 } }
	]
}